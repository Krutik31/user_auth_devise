<div class="container-fluid">

  <h2 class="text-center">Sign in Form</h2>

  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">
      <hr>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group">
          <%= f.label :username %><br />
          <%= f.text_field :username, class:"form-control", autofocus: true, autocomplete: "username" %>
        </div>

        <div class="field form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class:"btn btn-sm btn-primary" %>
          <%= link_to "Back", root_path, class:"btn btn-danger btn-sm" %>
        </div>
      <% end %>
      
    </div>
    <div class="col-3">
    </div>
  </div>
    
</div>
