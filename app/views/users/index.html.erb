<div class="text-center">
  <% if user_signed_in? %>
    <h3>Welcome <%= current_user.username %>, You are logged in!</h3>
    <h5><%= link_to "Sign out...", destroy_user_session_path, data: {turbo_method: :delete} %></h5>
  <% else %>
    <h3>Kindly <%= link_to "Login", new_user_session_path %> or <%= link_to "Register yourself", new_user_registration_path %>...</h3>
  <% end %>
</div>